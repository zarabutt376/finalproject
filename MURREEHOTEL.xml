<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bhurbanmuree"
    tools:context=".murreehotel">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Accomadation in Murree"
        android:textSize="30sp"
        android:background="@color/black"
        android:textStyle="bold"
        app:fontFamily="cursive"
        android:gravity="center"
        android:textColor="@color/white"
        >


    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click button below to select hotel"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:id="@+id/mhone"
        android:text="Bhurban"
        android:textColor="@color/white"
        android:background="@color/black"/>

    <Button
        android:id="@+id/mhtwo"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:text="Chinar Resort"
        android:textColor="@color/white" />
    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="25dp"
        android:id="@+id/mhthree"
        android:text="Rove Lodging"
        android:textColor="@color/white"
        android:background="@color/black"/>

</LinearLayout>

